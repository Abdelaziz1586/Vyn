blueprint DatabaseConnection do
    
    make connectionUrl "..."
    
    build takes url do
        make connectionUrl url
        say "Connecting to " + connectionUrl
    end

    ~ The new destructor syntax
    demolish do
        say "Closing connection to " + connectionUrl
        ~ cleanup code here
    end
end

make db new DatabaseConnection("localhost:3306")

~ ... use db ...

~ Explicitly triggers 'demolish' block
discard(db)